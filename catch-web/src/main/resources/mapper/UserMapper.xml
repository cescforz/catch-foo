<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.cescforz.foo.dao.UserDao" >

    <resultMap id="BaseResultMap" type="cn.cescforz.foo.bean.domain.User" >
        <id column="user_id" property="userId" jdbcType="INTEGER" />
        <result column="user_name" property="userName" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="phone" property="phone" jdbcType="VARCHAR" />
    </resultMap>


    <sql id="BASE_TABLE">
    t_user
  </sql>

    <sql id="BASE_COLUMN">
    user_id, user_name, password, phone
  </sql>

    <insert id="insert" parameterType="cn.cescforz.foo.bean.domain.User">
        insert into t_user (user_name, password,phone)
        values ( #{userName,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR},
      #{phone,jdbcType=VARCHAR})
    </insert>

    <select id="selectUsers" resultMap="BaseResultMap">
        SELECT
        <include refid="BASE_COLUMN"/>
        FROM
        <include refid="BASE_TABLE"/>
    </select>
</mapper>